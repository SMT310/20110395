<div class="mt-4">
    {{#if data.length}}
        <div class="row">
        {{#each data}}
            <div class="col-sm-12">
                <div class="card card-course-item">
                    <div class="card-body">
                        <h3 class="card-title">Title: {{this.title}}</h3>
                        <p class="card-text">Description: {{ this.description }}</p>
                        <a href="/post/{{ this.id }}/postViewDetail" class="btn btn-primary">View details</a>
                        <a href="/post/{{ this.id }}/postEdit" class="btn btn-info">Edit Post</a>
                        <a href="" class="btn btn-danger" data-toggle="modal" data-id="{{ this.id }}"
                        data-target="#delete-modal">Delete Post</a>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
    {{else }}
        <h1>Hiện tại không có bài đăng nào!</h1>
    {{/if }}
</div>

<form name="delete-form" method="POST"></form>

<!-- Modal -->
<div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete this post ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function(){
        var blogId;
        var deleteForm = document.forms['delete-form'];
        var btnDelete = document.getElementById('confirm-delete');

        $('#delete-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            blogId = button.data('id');
        });

        btnDelete.onclick = function () {
            deleteForm.action = '/post/' + blogId + '?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>
