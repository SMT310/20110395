<div class="container-edit">
    <a href="/" class="back-to-home">
        <i class="fa-solid fa-chevron-left"></i>
        Return
    </a>

    <div class="row d-flex justify-content-center align-items-center"></div >
    <div class="m-left-48">
        <form action="/post/{{data.id}}?_method=PUT" method="POST">
            <input type="hidden" id="id" name="id" value="{{ data.id }}">
            <div class="form-group">
                <label for="title">Post Title:</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" value="{{ data.title }}">
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="Enter Description" value="{{ data.description }}">
            </div>
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea class="form-control" id="content" name="content" placeholder="Write your Content">{{data.content}}</textarea>
            </div>
            <button type="submit" class="btn btn-post">Post</button>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var textInputs = document.querySelectorAll("input[type='text'], textarea");
        for (var i = 0; i < textInputs.length; i++) {
            textInputs[i].addEventListener("click", function() {
                this.select();
            });
        }
    });
</script>